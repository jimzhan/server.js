{
  "name": "server",
  "type": "module",
  "version": "0.1.0",
  "description": "Web server application startup kit with set of best practices.",
  "main": "index.js",
  "scripts": {
    "debug": "nodemon src/index.js",
    "lint": "eslint src",
    "start": "node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimzhan/server.js.git"
  },
  "keywords": [
    "Fastify",
    "ESM",
    "Server",
    "Best",
    "Practices",
    "Boilerplate"
  ],
  "author": "Jim Zhan <jim.zhan@me.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jimzhan/server.js/issues"
  },
  "homepage": "https://github.com/jimzhan/server.js#readme",
  "eslintConfig": {
    "root": true,
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "config"
    ],
    "ext": "cjs,js",
    "ignore": [
      "src/**/*.spec.js"
    ],
    "execMap": {
      "js": "node --inspect"
    },
    "env": {
      "NODE_DEBUG": 9229,
      "NODE_ENV": "development"
    }
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/under-pressure": "^8.3.0",
    "config": "^3.3.10",
    "fastify": "^4.25.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@fastify/swagger": "^8.13.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.2",
    "standard": "^17.1.0"
  }
}
